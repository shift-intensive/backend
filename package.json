{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "npx @nestjs/cli start --watch",
    "build": "npx @nestjs/cli build",
    "docker-compose": "docker compose -p shift-intensive-backend up --build",
    "dev-debug": "nest start --debug --watch",
    "prod": "node dist/main",
    "lint": "eslint . --fix",
    "stylelint": "stylelint \"src/static/**/*.css\" --fix",
    "format": "prettier --write \"**/*.(ts|js)\"",
    "pretty": "yarn format && yarn lint",
    "lint-inspector": "npx @eslint/config-inspector",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "@nestjs/apollo": "^13.0.1",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "10.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "10.0.0",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "2.0.5",
    "@nestjs/mongoose": "11.0.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/platform-socket.io": "^10.3.7",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/websockets": "^10.3.7",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "generate-password": "^1.7.1",
    "graphql": "^16.10.0",
    "graphql-subscriptions": "^3.0.0",
    "hbs": "^4.2.0",
    "mongoose": "8.9.5",
    "nestjs-i18n": "^10.5.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.9",
    "@nestjs/schematics": "^10.1.1",
    "@siberiacancode/eslint": "^2.7.0",
    "@siberiacancode/prettier": "^1.2.0",
    "@types/express": "^4.17.21",
    "@types/node": "22.10.7",
    "@types/supertest": "^6.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "source-map-support": "^0.5.20",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --no-error-on-unmatched-pattern --fix"
    ]
  }
}
