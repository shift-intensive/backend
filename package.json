{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "npx @nestjs/cli start --watch",
    "build": "npx @nestjs/cli build",
    "docker-compose": "docker compose -p shift-intensive up --build",
    "dev-debug": "nest start --debug --watch",
    "prod": "node dist/main",
    "lint": "eslint . --fix",
    "stylelint": "stylelint \"src/static/**/*.css\" --fix",
    "format": "prettier --write \"**/*.(ts|js)\"",
    "pretty": "yarn format && yarn lint",
    "lint-inspector": "npx @eslint/config-inspector",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "@nestjs/apollo": "^12.1.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "10.0.0",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "2.0.5",
    "@nestjs/mongoose": "9.2.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/platform-socket.io": "^10.3.7",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/websockets": "^10.3.7",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "generate-password": "^1.7.1",
    "graphql": "^16.8.1",
    "graphql-subscriptions": "^2.0.0",
    "hbs": "^4.2.0",
    "mongoose": "7.0.2",
    "nestjs-i18n": "^10.5.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.7",
    "@siberiacancode/eslint": "^2.6.0",
    "@siberiacancode/prettier": "^1.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.7",
    "@types/supertest": "^6.0.2",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "lint-staged": "^15.3.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --no-error-on-unmatched-pattern --fix"
    ]
  }
}
